{
  "name": "@taprsvp/agent",
  "version": "0.5.0",
  "type": "module",
  "description": "TypeScript wrapper for TAP WASM Agent - Browser-optimized message packing/unpacking with flexible key management",
  "keywords": [
    "tap",
    "didcomm",
    "cryptocurrency",
    "transaction-authorization",
    "travel-rule",
    "wasm",
    "typescript"
  ],
  "author": "Pelle Braendgaard <pelle@notabene.id>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TransactionAuthorizationProtocol/tap-rs",
    "directory": "tap-ts"
  },
  "homepage": "https://github.com/TransactionAuthorizationProtocol/tap-rs/tree/main/tap-ts",
  "bugs": {
    "url": "https://github.com/TransactionAuthorizationProtocol/tap-rs/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.js"
    }
  },
  "files": [
    "dist/",
    "wasm/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json && vite build",
    "dev": "vite",
    "test": "vitest --no-watch",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist wasm",
    "prepare:publish": "./scripts/prepare-publish.sh",
    "prepublishOnly": "npm run clean && npm run prepare:publish && npm run test"
  },
  "dependencies": {
    "@taprsvp/types": "^1.9.0",
    "tap-wasm": "file:../tap-wasm/pkg"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@veramo/core": "^6.0.0",
    "@veramo/did-comm": "^6.0.0",
    "@veramo/did-manager": "^6.0.0",
    "@veramo/did-provider-key": "^6.0.0",
    "@veramo/did-resolver": "^6.0.0",
    "@veramo/key-manager": "^6.0.0",
    "@veramo/kms-local": "^6.0.0",
    "@veramo/message-handler": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "happy-dom": "^18.0.1",
    "key-did-resolver": "^4.0.0",
    "tap-wasm": "file:../tap-wasm/pkg",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
